Host *
ServerAliveInterval 10
ServerAliveCountMax 3
User <pid>

# ssh to servers
Host snowmane
    HostName snowmane.vbi.vt.edu
    IdentityFile ~/.ssh/id_rsa

Host lightfoot
    HostName lightfoot.vbi.vt.edu
    IdentityFile ~/.ssh/id_rsa

# ssh to lxc containers
Host sdal_rs
    ProxyCommand ssh lightfoot -W 127.0.0.1:22212

Host sdal_pg
    ProxyCommand ssh snowmane -W 127.0.0.1:22203

# ssh tunnels
Host rs_tunnel
    Hostname lightfoot.vbi.vt.edu
    LocalForward 8787 localhost:8788
    IdentityFile ~/.ssh/id_rsa

Host pg_tunnel
    Hostname snowmane.vbi.vt.edu
    LocalForward 5432 localhost:5433
    IdentityFile ~/.ssh/id_rsa
